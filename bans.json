{
    "swagger": 2,
    "info": {
        "title": "Quickblox TnS API",
        "description": "chat filter module",
        "version": "0.1.0"
    },
    "host": "api.quickblox.com",
    "schemes": [
        "https",
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json",
        "application/xml",
        "application/x-www-form-urlencoded"
    ],
    "paths": {
        "/chat/message_rules": {
            "get": {
                "summary": "Get list of message rules",
                "description": "Get list of message rules",
                "tags": [
                    "MessageRule"
                ],
                "responses": {
                    "200": {
                        "description": "An array of message rules",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "MessageRule"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create new ban rule",
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "422": {
                        "description": "Validation errors"
                    }
                },
                "tags": [
                    "MessageRule"
                ],
                "parameters": [
                    {
                        "name": "QB-Token",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "QuickBlox authentication token"
                    },
                    {
                        "name": "message_rule[find_regexp]",
                        "description": "regular expression (rule for identifying the potentially violating text)",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "message_rule[find_string]",
                        "description": "dictionary of string values (rule for identifying the potentially violating text)",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "message_rule[score]",
                        "description": "number incrementing the total ‘offensive score’ of current message",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "message_rule[mask]",
                        "description": "masking value - empty (no value) - no masking, message goes through as usual",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    }
                ]
            }
        },
        "/chat/bans/{ID}": {
            "get": {
                "summary": "Get message rule by id",
                "responses": {
                    "200": {
                        "description": "Message rule with specified id",
                        "schema": {
                            "type": "object",
                            "$ref": "MessageRule"
                        }
                    },
                    "404": {
                        "description": "Message rule not found"
                    }
                },
                "tags": [
                    "MessageRule"
                ]
            },
            "put": {
                "summary": "Update message rule by id",
                "responses": {
                    "204": {
                        "description": "Successful update"
                    },
                    "404": {
                        "description": "Ban rule not found"
                    }
                },
                "tags": [
                    "MessageRule"
                ]
            },
            "delete": {
                "summary": "Delete ban rule by id",
                "responses": {
                    "204": {
                        "description": "Successful deletion"
                    },
                    "404": {
                        "description": "Not found"
                    }
                },
                "tags": [
                    "MessageRule"
                ]
            }
        },
        "/chat/bans/{ID}/log": {
            "get": {
                "summary": "Get ban rule log",
                "responses": {
                    "200": {
                        "description": "List of created bans",
                        "schema": {
                            "type": "array",
                            "$ref": "BanLog"
                        }
                    }
                },
                "tags": [
                    "BanLog"
                ]
            },
            "post": {
                "summary": "Create ban rule trigger (ban user)",
                "parameters": [
                    {
                        "name": "QB-Token",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "QuickBlox authentication token"
                    },
                    {
                        "name": "ban_log[user_id]",
                        "type": "integer",
                        "format": "int32",
                        "in": "query",
                        "description": "ID of User"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Ban log successfuly created"
                    }
                },
                "tags": [
                    "BanLog"
                ]
            }
        },
        "/chat/rules": {
            "get": {
                "summary": "Get list of bans",
                "description": "Get list of bans",
                "tags": [
                    "ChatRule"
                ],
                "responses": {
                    "200": {
                        "description": "An array of chat rules",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "ChatRule"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create new chat rule",
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "422": {
                        "description": "Validation errors"
                    }
                },
                "tags": [
                    "ChatRule"
                ],
                "parameters": [
                    {
                        "name": "QB-Token",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "QuickBlox authentication token"
                    },
                    {
                        "name": "rule[mask]",
                        "description": "mask value",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "rule[title]",
                        "description": "title",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "rule[weight]",
                        "description": "weight",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    }
                ]
            }
        },
        "/chat/rules/{ID}": {
            "get": {
                "summary": "Get chat rule by id",
                "responses": {
                    "200": {
                        "description": "Chat rule with specified id",
                        "schema": {
                            "type": "object",
                            "$ref": "ChatRule"
                        }
                    },
                    "404": {
                        "description": "Ban rule not found"
                    }
                },
                "tags": [
                    "ChatRule"
                ]
            },
            "put": {
                "summary": "Update chat rule by id",
                "responses": {
                    "204": {
                        "description": "Successful update"
                    },
                    "404": {
                        "description": "Ban rule not found"
                    }
                },
                "tags": [
                    "ChatRule"
                ]
            },
            "delete": {
                "summary": "Delete chat rule by id",
                "responses": {
                    "204": {
                        "description": "Successful deletion"
                    },
                    "404": {
                        "description": "Not found"
                    }
                },
                "tags": [
                    "BanRule"
                ]
            }
        },
        "/chat/rules/{ID}/log": {
            "get": {
                "summary": "Get chat rule log",
                "responses": {
                    "200": {
                        "description": "List of chat rule triggers",
                        "schema": {
                            "type": "array",
                            "$ref": "BanLog"
                        }
                    }
                },
                "tags": [
                    "RuleLog"
                ]
            },
            "post": {
                "summary": "Create rule trigger",
                "parameters": [
                    {
                        "name": "QB-Token",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Ban log successfuly created"
                    }
                },
                "tags": [
                    "RuleLog"
                ]
            }
        }
    },
    "definitions": {
        "MessageRule": {
            "required": [
                "sum",
                "count",
                "required"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "readOnly": true,
                    "description": "unique record identifier"
                },
                "find_regexp": {
                    "type": "string",
                    "description": "contains a regular expression (rule for identifying the potentially violating text)"
                },
                "find_string": {
                    "type": "string",
                    "description": "contains a dictionary of string values (rule for identifying the potentially violating text)"
                },
                "score": {
                    "type": "integer",
                    "format": "int32",
                    "description": "number incrementing the total ‘offensive score’ of current message"
                },
                "mask": {
                    "type": "string",
                    "description": "masking value - 1. empty (no value), no masking, message goes through as usual; 2. any other value (example - '<censored>') the suspicious part of message is replaced with the mask value"
                },
                "external_id": {
                    "type": "string",
                    "description": "link to external (client’s own) TnS system rules identification"
                },
                "created_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "updated_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "user_id": {
                    "type": "integer",
                    "format": "int32",
                    "readOnly": true,
                    "description": "owner ID"
                },
                "application_id": {
                    "type": "integer",
                    "readOly": true,
                    "format": "int32",
                    "description": "host application ID"
                }
            }
        },
        "BanLog": {
            "required": [
                "user_id"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "readOnly": true,
                    "description": "unique record identifier"
                },
                "ban_rule_id": {
                    "type": "string",
                    "description": "ID of BanRule"
                },
                "valid_till": {
                    "type": "string",
                    "format": "dateTime",
                    "description": "ban deadline"
                },
                "created_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "updated_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "user_id": {
                    "type": "integer",
                    "format": "int32",
                    "readOnly": true,
                    "description": "banned user ID"
                },
                "application_id": {
                    "type": "integer",
                    "readOly": true,
                    "format": "int32",
                    "description": "host application ID"
                }
            }
        },
        "RuleLog": {
            "required": [
                "user_id"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "readOnly": true,
                    "description": "unique record identifier"
                },
                "chat_rule_id": {
                    "type": "string",
                    "description": "ID of ChatRule"
                },
                "weight": {
                    "type": "integer",
                    "format": "int32",
                    "description": "triggered score"
                },
                "chat_message_id": {
                    "type": "string",
                    "description": "original chat message id"
                },
                "created_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "updated_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "user_id": {
                    "type": "integer",
                    "format": "int32",
                    "readOnly": true,
                    "description": "user ID"
                },
                "application_id": {
                    "type": "integer",
                    "readOly": true,
                    "format": "int32",
                    "description": "host application ID"
                }
            }
        },
        "ChatRule": {
            "required": [
                "value"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "readOnly": true,
                    "description": "unique record identifier"
                },
                "title": {
                    "type": "string",
                    "description": "Rule title"
                },
                "mask": {
                    "type": "string",
                    "description": "mask value"
                },
                "value": {
                    "type": "string",
                    "description": "rule value"
                },
                "created_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "updated_at": {
                    "type": "string",
                    "readOnly": true,
                    "format": "dateTime"
                },
                "user_id": {
                    "type": "integer",
                    "format": "int32",
                    "readOnly": true,
                    "description": "banned user ID"
                },
                "application_id": {
                    "type": "integer",
                    "readOly": true,
                    "format": "int32",
                    "description": "host application ID"
                }
            }
        }
    }
}